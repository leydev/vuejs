{
    "compilerOptions": {
        "esModuleInterop": true,
        "target": "ESNext",
        "module": "CommonJS",
        "strict": true,
        "jsx": "preserve",
        "moduleResolution": "Node",
        "baseUrl": "./src",
        "outDir": "build",
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "paths": {
            "@/*": [ "*"],
            "@/components/*": [
                "components/",
                "components/*"
            ]
        }
    },
    "exclude": [
        "node_modules"
    ],
}